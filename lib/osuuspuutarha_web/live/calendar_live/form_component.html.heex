<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="calendar-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :pickup_date %>
    <%= date_select f, :pickup_date %>
    <%= error_tag f, :pickup_date %>
  
    <%= label f, :is_picked_up %>
    <%= checkbox f, :is_picked_up %>
    <%= error_tag f, :is_picked_up %>
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
